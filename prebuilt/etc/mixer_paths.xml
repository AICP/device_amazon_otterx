<!-- Kindle Fire 1st/2nd Gen -->
<mixer>
  <!-- These are the initial mixer settings -->

  <!-- general -->
  <ctl name="DL2 Left Equalizer"		value="High-pass 0dB" />
  <ctl name="DL2 Right Equalizer"		value="High-pass 0dB" />
  <ctl name="DL1 Equalizer"			value="High-pass 0dB" />
  <ctl name="DL1 Media Playback Volume"		value="118" />
  <ctl name="DL2 Media Playback Volume"		value="118" />
  <ctl name="DL1 Voice Playback Volume"		value="120" />
  <ctl name="DL2 Media Playback Volume"		value="120" />
  <ctl name="SDT DL Volume"			value="120" />
  <ctl name="Earphone Playback Volume"		value="15" />
  <ctl name="AUDUL Voice UL Volume"		value="120" />
  <ctl name="Capture Preamplifier Volume"	value="1" />
  <ctl name="Capture Volume"			value="4" />
  <ctl name="SDT UL Volume"			value="101" />
  <ctl name="Sidetone Mixer Capture"		value="0" />

  <!-- headset -->
  <ctl name="Sidetone Mixer Playback"		value="1" />
  <ctl name="DL1 PDM Switch"			value="1" />
  <ctl name="Headset Power Mode"		value="Low-Power" />

  <!-- bt -->
  <ctl name="BT UL Volume"			value="126" />
  <ctl name="DL1 BT_VX Switch"			value="0" />

  <!-- KFire uses DL1 -->
  <ctl name="DL1 PDM_DL2 Switch"		value="1" />

  <!-- Misc -->
  <ctl name="DL1 Mono Mixer" value="0" />

  <path name="hf_output_on">
    <ctl name="HF Left Playback"		value="HF DAC" />
    <ctl name="HF Right Playback"		value="HF DAC" />
  </path>

  <path name="hf_output_off">
    <ctl name="HF Left Playback"		value="Off" />
    <ctl name="HF Right Playback"		value="Off" />
  </path>

  <path name="hs_output_on">
    <ctl name="HS Left Playback"		value="HS DAC" />
    <ctl name="HS Right Playback"		value="HS DAC" />
  </path>

  <path name="hs_output_off">
    <ctl name="HS Left Playback"		value="Off" />
    <ctl name="HS Right Playback"		value="Off" />
  </path>

  <path name="fmtx_output_on">
    <ctl name="DL1 MM_EXT Switch"		value="1" />
    <ctl name="DL1 PDM Switch"			value="0" />
  </path>

  <path name="fmtx_output_off">
    <ctl name="DL1 MM_EXT Switch"		value="0" />
  </path>

  <path name="mm_ul2_bt">
    <ctl name="MUX_UL10"			value="BT Left" />
    <ctl name="MUX_UL11"			value="BT Right" />
  </path>

  <path name="mm_ul2_fmradio">
    <ctl name="MUX_UL10"			value="AMic1" />
    <ctl name="MUX_UL11"			value="AMic0" />
    <ctl name="DL1 Capture Playback Volume"	value="120" />
  </path>

  <path name="mm_ul2_fmradio_digital">
  </path>

  <path name="mm_ul2_amic_left">
    <ctl name="MUX_UL10"			value="AMic0" />
    <ctl name="MUX_UL11"			value="AMic0" />
  </path>

  <path name="mm_ul2_amic_right">
    <ctl name="MUX_UL10"			value="AMic1" />
    <ctl name="MUX_UL11"			value="AMic1" />
  </path>

  <path name="mm_ul2_dmic0">
    <ctl name="MUX_UL10"			value="MMExt Left" />
    <ctl name="MUX_UL11"			value="MMExt Right" />
  </path>

  <!-- VX UL front-end paths -->

  <path name="vx_ul_amic_left">
    <ctl name="MUX_VX0"				value="AMic0" />
    <ctl name="MUX_VX1"				value="AMic0" />
    <ctl name="AUDUL Mono Mixer"		value="0" />
    <ctl name="Voice Capture Mixer Capture"	value="1" />
  </path>

  <path name="vx_ul_amic_right">
    <ctl name="MUX_VX0"				value="AMic1" />
    <ctl name="MUX_VX1"				value="AMic1" />
    <ctl name="AUDUL Mono Mixer"		value="0" />
    <ctl name="Voice Capture Mixer Capture"	value="1" />
  </path>

  <path name="vx_ul_dmic0">
    <ctl name="MUX_VX0"				value="DMic0L" />
    <ctl name="MUX_VX1"				value="DMic0L" />
    <ctl name="AUDUL Mono Mixer"		value="0" />
    <ctl name="Voice Capture Mixer Capture" 	value="1" />
  </path>

  <path name="vx_ul_bt">
    <ctl name="MUX_VX0"				value="BT Left" />
    <ctl name="MUX_VX1"				value="BT Right" />
    <ctl name="AUDUL Mono Mixer"		value="1" />
    <ctl name="Voice Capture Mixer Capture" 	value="1" />
  </path>

  <path name="vx_rec_default">
    <ctl name="MUX_UL10"			value="VX Left" />
    <ctl name="MUX_UL11"			value="VX Right" />
  </path>

  <path name="vx_rec_ul">
    <ctl name="Capture Mixer Voice Capture"	value="1" />
    <ctl name="VXREC Voice UL Volume"		value="120" />
  </path>

  <path name="vx_rec_dl">
    <ctl name="Capture Mixer Voice Playback"	value="1" />
    <ctl name="VXREC Voice DL Volume"		value="120" />
  </path>

  <path name="codec_output_controls">
    <ctl name="SP driver mute"			value="1" />
    <ctl name="SP Analog Gain"			value="127" />
    <ctl name="DAC Playback Volume"		value="140" />
    <ctl name="Right DAC input selection"	value="right data" />
    <ctl name="Left DAC input selection"	value="left data" />
    <ctl name="Left Output Mixer From DAC_L"	value="1" />
    <ctl name="Right Output Mixer From DAC_R"	value="1" />
    <ctl name="HP driver mute"			value="1" />
    <ctl name="HP Analog Gain"			value="127" />
    <ctl name="HP Output common - mode voltage control"	value="5 V " />
    <ctl name="DL1 Mixer Multimedia"		value="1" />
    <ctl name="Sidetone Mixer Playback"		value="1" />
    <ctl name="DL1 MM_EXT Switch"		value="1" />
  </path>

  <path name="codec_input_controls">
    <ctl name="M_Input_Mixer CM_PGA_CNTL"	value="2" />
    <ctl name="P_Input_Mixer MIC1LM_PGA_CNTL"	value="2" />
    <ctl name="ADC MIC_PGA GAIN"		value="50" />
    <ctl name="ADC COARSE GAIN"			value="48" />
    <ctl name="Sidetone Mixer Capture"		value="1" />
    <ctl name="AUDUL Voice UL Volume"		value="120" />
    <ctl name="SDT UL Volume"			value="120" />
  </path>

  <!-- These are useful named paths -->

  <!-- Playback paths -->
  <path name="media-speaker">

    <!-- select front-end -->
<!--    <ctl name="DL1 Mixer Multimedia" value="0" /> //-->
    <ctl name="DL1 Mixer Voice" value="0" />

    <!-- select back-end -->
    <ctl name="DL1 PDM Switch" value="0" />

    <!-- select output stage -->
    <path name="hs_output_off" />
    <path name="hf_output_on" />
    <path name="codec_output_controls" />
  </path>

  <path name="media-headphones">
    <!-- select front-end -->
<!--    <ctl name="DL1 Mixer Multimedia" value="1" /> //-->
    <ctl name="DL1 Mixer Voice" value="0" />

    <!-- select back-end -->
    <ctl name="DL1 PDM Switch" value="1" />

    <!-- select output stage -->
    <path name="hs_output_on" />
    <path name="hf_output_off" />
    <path name="codec_output_controls" />
  </path>

  <path name="voice-rec-speaker">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="voice-rec-headphones">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="communication-speaker">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="communication-headphones">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="speaker-and-headphones">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="bt-sco-headset">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <!-- Capture paths -->

  <path name="media-main-mic">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="voice-rec-main-mic">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="communication-main-mic">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="media-second-mic">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="media-headset-mic">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="bt-sco-mic">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="voice-rec-headset-mic">
  <!-- NOT SUPPORTED/TODO -->
  </path>

  <path name="communication-headset-mic">
  <!-- NOT SUPPORTED/TODO -->
  </path>

</mixer>
